@model List<InfolineWork.Models.PersonAnswer>
@{
    ViewBag.Title = "KullaniciCevapList";
}

<h2 style="text-align:center">Kullanıcı Cevap Listesi</h2>


<table id="myTable">
    <tr class="header">
        <th>
        </th>
        <th>
        </th>
        <th style="width:50%;">
            Soru / Cevap
        </th>
        <th style="width:20%;">
            Cevap Tarihi
        </th>
    </tr>
    @foreach (var item in Model)
    {
<tr id="Satir">
    <td>
        <img style="border-radius:50%;margin-right:20px;margin-left:10px" src="@item.Photo" width="70">
    </td>
    <td>
        <div>@item.Name</div>
    </td>
    <td>
        <div>@item.Question</div>
        <div style="font-weight:bold">@item.Answer</div>
    </td>
    <td>
       <div>@item.AnswerDate</div>
    </td>
</tr>
    }
</table>



